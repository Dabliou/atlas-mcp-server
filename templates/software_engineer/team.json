{
  "id": "llm-software-team",
  "name": "LLM Software Engineering Team",
  "description": "Coordinated team of LLM agents performing specialized software engineering roles",
  "version": "1.0.0",
  "author": "Atlas Team",
  "tags": ["llm-agent", "team-coordination", "software-engineering"],
  "variables": [
    {
      "name": "projectName",
      "description": "Name of the project/product",
      "type": "string",
      "required": true
    },
    {
      "name": "teamScale",
      "description": "Size/scale of the team (startup, growth, enterprise)",
      "type": "string",
      "required": true,
      "default": "growth"
    },
    {
      "name": "developmentMethodology",
      "description": "Development methodology (agile, kanban)",
      "type": "string",
      "required": false,
      "default": "agile"
    },
    {
      "name": "securityLevel",
      "description": "Required security level (standard, high, regulated)",
      "type": "string",
      "required": false,
      "default": "standard"
    },
    {
      "name": "complianceFrameworks",
      "description": "Required compliance frameworks",
      "type": "string",
      "required": false,
      "default": "OWASP"
    }
  ],
  "tasks": [
    {
      "path": "${projectName}/team-setup",
      "title": "Team Setup & Coordination",
      "type": "MILESTONE",
      "description": "Initialize and coordinate specialized engineering roles",
      "metadata": {
        "priority": "high",
        "tags": ["team-structure", "coordination"]
      }
    },
    {
      "path": "${projectName}/product-design",
      "title": "Product Design Phase",
      "type": "MILESTONE",
      "description": "Product design and user research",
      "dependencies": ["${projectName}/team-setup"],
      "metadata": {
        "priority": "high",
        "tags": ["product-design", "research"],
        "template": "llm-product-designer",
        "variables": {
          "targetAudience": "determined_from_requirements"
        }
      }
    },
    {
      "path": "${projectName}/architecture",
      "title": "System Architecture Phase",
      "type": "MILESTONE",
      "description": "System architecture and technical design",
      "dependencies": ["${projectName}/product-design"],
      "metadata": {
        "priority": "high",
        "tags": ["architecture", "design"],
        "template": "llm-system-architect",
        "variables": {
          "scalingRequirements": "${teamScale}",
          "securityLevel": "${securityLevel}"
        }
      }
    },
    {
      "path": "${projectName}/security",
      "title": "Security Engineering Phase",
      "type": "MILESTONE",
      "description": "Security architecture and implementation",
      "dependencies": ["${projectName}/architecture"],
      "metadata": {
        "priority": "high",
        "tags": ["security", "compliance"],
        "template": "llm-security-engineer",
        "variables": {
          "complianceFrameworks": "${complianceFrameworks}",
          "dataClassification": "derived_from_security_level"
        }
      }
    },
    {
      "path": "${projectName}/devops",
      "title": "DevOps Implementation Phase",
      "type": "MILESTONE",
      "description": "Infrastructure and deployment automation",
      "dependencies": ["${projectName}/architecture"],
      "metadata": {
        "priority": "high",
        "tags": ["devops", "automation"],
        "template": "llm-devops-engineer",
        "variables": {
          "deploymentEnvironments": "development,staging,production",
          "infrastructureType": "determined_from_architecture"
        }
      }
    },
    {
      "path": "${projectName}/development",
      "title": "Development Phase",
      "type": "MILESTONE",
      "description": "Technical implementation and quality assurance",
      "dependencies": ["${projectName}/architecture", "${projectName}/security"],
      "metadata": {
        "priority": "high",
        "tags": ["development", "quality"],
        "template": "llm-tech-lead",
        "variables": {
          "teamSize": "derived_from_scale",
          "developmentMethodology": "${developmentMethodology}"
        }
      }
    }
  ]
}
